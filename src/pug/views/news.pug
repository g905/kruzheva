extends ../includes/layout
block content
    section#page_news.mt-5.mb-5
        .container
            .title.text-center.mb-5
                h3 Новости
            .row.mb-5.d-flex.align-items-center
                .col-3
                    .filter по дате
                .col
                    .search-wrap
                        input.search(type='text' placeholder='Найти')
                        i.fas.fa-search.float-right
            .row
                - let n = 1
                while n < 6
                    - d = (100*n).toString()
                    .item(data-aos="fade-up" data-aos-duration="1000" data-aos-delay=d data-aos-anchor-placement="center-bottom")
                        .card.card-hover
                            .card-wrap
                            img(src="img/svc_img" + n + ".png").img-fluid
                            .card-body
                                h5.card-title="Название Новости " + n++
                                p.card-text В рамках спецификации современных стандартов, предприниматели в сети...&nbsp;
                                    a(href="#") Читать далее

