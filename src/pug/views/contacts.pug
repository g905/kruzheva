extends ../includes/layout

mixin soc()
    - let icons = ["fa-viber", "fa-whatsapp", "fa-skype", "fa-vk", "fa-instagram", "fa-facebook", "fa-youtube"]
    .social-icons
        ul.d-flex.flex-nowrap.flex-lg-wrap.text-left.justify-content-around.justify-content-lg-start.w-80.mt-3.mb-3
            each icon in icons
                li
                    a
                        i.fab(class=icon)
block content
    section#page_contacts.mt-5.mb-5(data-aos="fade-in" data-aos-duration="1000" data-aos-anchor-placement="top-bottom")
            .container-fluid
                .row
                    .offset-2
                    .col-12.col-lg-3.text-center.text-lg-left
                        .title.mb-5
                            h3 Контакты
                        .addr.mb-5 Адрес: <br> Удмуртия, г. Ижевск<br>ул. Ижевская 2
                        .phone.mb-5 Телефон <br> +79128577186
                        .email.mb-5 E-mail: <br> login@gmail.com
                        +soc()

                    .col.pr-0.p-fix
                        .map
                            iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3A7c0405226b795089436d721feb139292ebf31e0aa5360abe926661fb2583c4cd&amp;source=constructor" width="100%" height="500" frameborder="0")