section#services(data-aos="fade-in" data-aos-duration="1000" data-aos-anchor-placement="center-bottom")
    .top
        .container
            .row.align-items-center.text-center.mb-1
                .col-12.col-lg-2.order-3.order-lg-1
                    .all-services
                        //- вдруг понадобится
                        //a(href="#") Все мероприятия
                .col-12.col-lg-8.order-1.order-lg-2
                    .title.text-uppercase
                        h3 Услуги клуба
                .col-12.col-lg-2.order-4.order-lg-3
                    .slick-controls-services
    .content.mt-5.mb-5
        .container-fluid
            .row
                .col-12
                    .slick-services.m-auto
                        - let n = 1
                        while n < 6
                            - d = (100*n).toString()
                            .item(data-aos="zoom-out" data-aos-duration="1000" data-aos-delay=d data-aos-anchor-placement="center-bottom")
                                .card.card-hover
                                    .card-wrap
                                    img(src="img/svc_img"+n+".png").img-fluid
                                    .card-body
                                        h5.card-title="Название услуги "+n++
                                        p.card-text
                                            a(href="tel:+79128577186" data-phone="+79128577186") Заказать по телефону
